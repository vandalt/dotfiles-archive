#! /bin/bash

# adjust second monitor scale and place on desired side (left by default)

if [ $# == 0 ]
then
    xrandr --output eDP-1 --auto --panning 3200x1800+0+0 --primary
elif [ $1 == "-l" ]
then
    monit=$2
    if [ $monit == "maison" ]
    then
	    xrandr --output HDMI-1 --auto --panning 3840x2400+0+0 --scale 2x2 --output eDP-1 --auto --panning 3200x1800+3840+0 --right-of HDMI-1 --primary
    elif [ $monit == "appart" ]
    then
	    xrandr --output HDMI-1 --auto --panning 3360x2100+0+0 --scale 2x2 --output eDP-1 --auto --panning 3200x1800+3360+0 --right-of HDMI-1 --primary
    fi
elif [ $1 == "-r" ]
then
    monit=$2
    if [ $monit == "maison" ]
    then
	    xrandr --output eDP-1 --auto --panning 3200x1800+0+0 --primary --output HDMI-1 --auto --panning 3840x2400+3200+0 --scale 2x2 --right-of eDP-1
    elif [ $monit == "appart" ]
    then
	    xrandr --output eDP-1 --auto --primary --output HDMI-1 --auto --panning 3360x2100+3200+0 --scale 2x2 --right-of eDP-1
    fi
else
    monit=$1
    if [ $monit == "maison" ]
    then
	    xrandr --output HDMI-1 --auto --panning 3840x2400+0+0 --scale 2x2 --output eDP-1 --auto --panning 3200x1800+3840+0 --right-of HDMI-1 --primary
    elif [Â $monit == "appart" ]
    then
	    xrandr --output HDMI-1 --auto --panning 3360x2100+0+0 --scale 2x2 --output eDP-1 --auto --panning 3200x1800+3360+0 --right-of HDMI-1 --primary	
    fi
fi
